  <%= simple_form_for(@costume) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price_per_day %>
    <%= f.input :size, collection: ["Extra small", "Small","Medium","Large", "Extra Large"] %>
    <%= f.input :category, collection: @costume_categories, prompt: 'Select Category' %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit class: "btn btn-primary mt-2"%>
  <% end %>

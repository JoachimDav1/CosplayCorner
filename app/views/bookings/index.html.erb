<div class ="banner">
  <H1>All of your bookings...</H1>
</div>
<div class="container">
  <div class="grid-container">
    <% @bookings.each do |booking| %>
    <div class= "card">
      <% if booking.costume.photos.attached? %>
          <% photo = booking.costume.photos.sample %>
          <%= cl_image_tag photo.key, alt: "Costume picture", class: "card-photo", style: "width:90%; height: 50%" %>
      <% else %>
            <%= image_tag "girl.jpg", alt: "girl picture", class: "card-photo", style: "width:90%; height: 50%" %>
      <% end %>
      <h6 class="card-title"><%= booking.costume.title %></h6>
      <div class="card-info">
          <p><b>From -</b> <%= booking.start_date %></p>
          <p><b>To-</b> <%= booking.end_date %></p>
          <p><b><%= booking.total_price %> â‚¬</b></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
